[user]
	name = Sergey Buloshnikov
	email = sergeybu@essence-grp.com

[credential]
	helper = cache

[color]
	ui = auto

[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
	default = simple

[pull]
	default = simple

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false
	keepBackup = false

[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%ad%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	s = status --ignore-submodules=all
	b = branch -v
	l = log --pretty=format:'%C(bold blue) %h %C(reset) %C(green)[%ad]%C(reset) | %C(white)%s %C(dim white)- %an %C(reset)%C(yellow)%d%C(reset)' --graph --date=short
	a = add -A
	subup = submodule update --recursive

[include]
	path = .gitconfig.local
