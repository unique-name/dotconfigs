[user]
	name = Sergey Buloshnikov
	email = sergeyx.buloshnikov@intel.com

[color]
	ui = auto

[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[push]
	default = matching

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[alias]
	log2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%ad%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	s = status -s --ignore-submodules=all
	b = branch -av
	l = log --pretty=format:'%C(bold blue) %h %C(reset) %C(green)[%ad]%C(reset) | %C(white)%s %C(dim white)- %an %C(reset)%C(yellow)%d%C(reset)' --graph --date=short

[include]
	path = .gitconfig.local

