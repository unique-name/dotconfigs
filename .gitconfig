[user]
	name = Sergey Buloshnikov
	email = sergey.buloshnikov@dell.com

[credential]
	helper = cache

[color]
	ui = auto

[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX

[color "diff-highlight"]
    oldNormal = brightred
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = cyan bold
    frag = magenta 
    old = brightred
    new = green bold

[push]
	default = current

[pull]
        rebase = true

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false
	keepBackup = false

[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%ad%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	s = status --ignore-submodules=all
	b = branch -v
	l = log --pretty=format:'%C(bold blue) %h %C(reset) %C(green)[%ad]%C(reset) | %C(white)%s %C(dim white)- %an %C(reset)%C(yellow)%d%C(reset)' --date=short
	a = add -A
	subup = submodule update --recursive

[include]
	path = .gitconfig.local
